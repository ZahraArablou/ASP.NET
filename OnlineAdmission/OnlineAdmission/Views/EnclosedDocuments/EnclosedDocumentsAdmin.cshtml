@model IEnumerable<OnlineAdmission.Models.EnclosedDocument>

@{
    ViewBag.Title = "EnclosedDocumentsAdmin";
}
<br />

<ul id="tabstrip" class="nav nav-tabs" role="tablist">
    <li><a href="/Applications/DetailsAdmin/@ViewBag.applicationId" role="tab">Personal Information</a></li>
    <li><a href="/EducationDetails/EducationAdmin/@ViewBag.applicationId" role="tab">Educational Details</a></li>
    <li class="active"><a href="/EnclosedDocuments/EnclosedDocumentsAdmin/@ViewBag.applicationId" role="tab">Enclosed Documents</a></li>
</ul>

