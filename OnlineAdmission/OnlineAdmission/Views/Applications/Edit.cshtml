                        @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProgarmId, "ProgarmId", htmlAttributes: new { @class = "control-label col-md-2" })
